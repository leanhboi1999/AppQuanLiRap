CREATE OR REPLACE TRIGGER TRIG_AUTO_DELETE_MANV_TAIKHOAN
AFTER DELETE ON NHANVIEN
FOR EACH ROW
DECLARE
  V_MANV NHANVIEN.MANHANVIEN%TYPE;
BEGIN
  V_MANV:=:OLD.MANHANVIEN;
  DELETE FROM TAIKHOAN WHERE MANHANVIEN=V_MANV;
END;
